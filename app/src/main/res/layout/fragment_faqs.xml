                android:text="@string/q2_how_do_i_start_using_quickfoodie"
                android:textSize="16sp"
                android:textColor="@color/darkPink"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/ans_n1_download_the_app_and_add_your_delivery_address_n_n2_choose_from_the_full_menu_of_your_city_s_best_restaurants_n_n3_place_your_order_and_wait_as_your_meal_is_prepared_and_delivered"
