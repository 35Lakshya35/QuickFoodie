                android:textSize="16sp"
                android:textColor="@color/darkPink"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/ans_you_can_pay_by_cash_or_cheque_at_the_time_of_delivery_we_will_soon_be_introducing_more_payment_methods"
